{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "schemaVersion": {
            "type": "string"
        },
        "identity": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "tagline": {
                    "type": "string"
                },
                "department": {
                    "type": "string"
                },
                "isCore": {
                    "type": "boolean"
                },
                "avatar": {
                    "type": "string",
                    "description": "Path to 500x500 portrait in public/portraits"
                }
            },
            "required": [
                "id",
                "name"
            ]
        },
        "skills": {
            "type": "object"
        },
        "model": {
            "type": "object"
        },
        "tools": {
            "type": "object"
        },
        "bus": {
            "type": "object"
        },
        "dependencies": {
            "type": "object"
        },
        "skins": {
            "type": "object"
        },
        "prompt": {
            "type": "object"
        }
    },
    "required": [
        "identity",
        "prompt"
    ]
}