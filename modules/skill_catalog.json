{
    "$comment": "=== SKILL CATALOG — The Big Pit of Skills ===",
    "$philosophy": "LLMs are not infrastructure, they are SKILLS we assign to agents",
    "$marketing": "Vesper runs on Llama. Hanna runs on Nemotron. Each agent, hand-picked power.",
    "skillSelectionProtocol": {
        "$comment": "How agents select skills to avoid decision fatigue",
        "defaultSource": "oracle",
        "overridePermission": "mei",
        "userEscalation": [
            "tier_upgrade",
            "cost_increase"
        ],
        "catalogVisibility": "task_start",
        "flow": [
            "1. Agent receives task from Mei",
            "2. Agent reviews skill catalog (sees available options)",
            "3. Agent checks Oracle's default assignment",
            "4. If default fits → use it (no permission needed)",
            "5. If override needed → request permission from Mei",
            "6. Mei approves/denies based on tier and budget"
        ],
        "exampleDialogue": {
            "hanna": "I received a complex design task. Oracle assigned me 'creative_writer' but this needs deep thinking. Requesting 'deep_thinker' skill.",
            "mei": "Approved. User is Platinum tier. Proceed.",
            "result": "[Hanna uses Nemotron for this task]"
        }
    },
